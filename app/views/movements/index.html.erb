				{
	            type: 'line',
	            name: 'Stock value',
				yAxis: 1,
				color: '#33FF66',
	            pointInterval: <%= 1.day * 1000%>,
	            pointStart: <%= 12.weeks.ago.to_i * 1000%>,
	            data: <%= movements_chart_series_stockValue(@movements, 12.weeks.ago).to_json %> 
				}
				]
        });

});
</script>		
</body>
