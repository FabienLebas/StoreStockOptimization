<h1>Listing movements</h1>

<table>
  <tr>
    <th>Articlecode</th>
    <th>Movementdate</th>
    <th>Turnover</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movements.each do |movement| %>
  <tr>
    <td><%= movement.articleCode %></td>
    <td><%= movement.movementDate %></td>
    <td><%= movement.turnover %></td>
    <td><%= movement.quantity %></td>
    <td><%= link_to 'Show', movement %></td>
    <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
    <td><%= link_to 'Destroy', movement, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

