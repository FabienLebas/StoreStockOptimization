<h1>Listing users</h1>

<table cellspacing="0" cellpadding="3px" rules="all" 
   style="border:solid 1px #777777; border-collapse:collapse; font-family:verdana; font-size:11px;"> 
   <tr style="background-color:lightgrey;"> 
      <th style="width:200px;">User</th> 
      <th style="width:200px;">Creation date</th> 
      <th style="width:100px;">Language</th> 
      <th style="width:100px;">Article nb</th> 
      <th style="width:100px;">Supplier nb</th> 
      <th style="width:100px;">Movement nb</th> 
      <th style="width:100px;">Order nb</th>
      <th style="width:100px;">Subscription end</th> 
   </tr> 
   <% @users.each do |user| %>
	<tr> 
      	<td style="padding-left:10px; color:midnightblue;"><%= user.email %></td> 
      	<td style="padding-left:10px; color:midnightblue;"><%= user.created_at %></td>
      	<td style="padding-left:10px; color:midnightblue;"><%= user.language %></td> 
      	<td style="padding-left:10px; color:midnightblue;"><%= Article.where(:user => user.email).length %></td> 
		<td style="padding-left:10px; color:midnightblue;"><%=  Supplier.where(:user => user.email).length%></td> 
		<td style="padding-left:10px; color:midnightblue;"><%=  Movement.where(:user => user.email).length%></td> 
		<td style="padding-left:10px; color:midnightblue;"><%=  Order.where(:user => user.email).length%></td>
		<td style="padding-left:10px; color:midnightblue;"><%=  if Subscription.where(:user2 => user.email).length == 0
																	then "0"
																	else Subscription.where(:user2 => user.email).last.end
																		end%></td>		
	  </tr>
	<% end %>
</table>

