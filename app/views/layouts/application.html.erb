<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tag %>
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->    
    <%= stylesheet_link_tag 'screen', :media => 'screen' %>
    <%= stylesheet_link_tag 'print',  :media => 'print' %>
    <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
    <%= stylesheet_link_tag 'custom', :media => 'screen' %>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
	
	<head>
	  <meta charset="utf-8" />
	  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
	  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
	  <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
	  <link rel="stylesheet" href="/resources/demos/style.css" />

	</head>
  </head>

  <body>
    <div class="container">
      <header id="navtop">
				<img src="/images/logo.jpg" alt="Efficient-Inventory" class="logo fleft">
				<img src="/images/efficient_inventory_logo_text.jpg" alt="Efficient-Inventory-text" class="logo fleft">	
		<nav class="fright">
			<% if user_signed_in? %>
				<ul><%= link_to t(".suppliers"), suppliers_path%></ul>				
            	<ul> <%= link_to 'Articles', articles_path %></ul>
				<ul> <%= link_to t(".movements"), movements_path%></ul>
				<ul> <%= link_to t(".orders"), orders_path%></ul>
			<% else %>
				<ul>
				<li><h4><%= t ".beta_testers_title"%></h4></li>
				<li><dd><%= t ".beta_testers_text1"%></li></dd>
				<li><dd><%= t ".beta_testers_text2"%></li></dd>
				<li><dd><%= t ".beta_testers_text3"%></li></dd>
				</ul>
			<% end %>	
          		<ul><div id="user_nav">
				<li><% if user_signed_in? %>
				<%= t ".signed_in_as"%><%= current_user.email %></li>
				<li><%= t ".not_you"%>
				<%= link_to t(".sign_out"), destroy_user_session_path, :method => :delete %>
				<% else %>
				<li><button style="width:200px; height:80px; font-size:24px"> <%= link_to t(".beta_testers_button"), new_user_registration_path %></button></li>
				<br/>
				<li><h4><%= t ".or"%> <%= link_to t(".sign_in"), new_user_session_path %>.</h4></li>
				<% end %></li>
				</div></ul>
			</ul>
			<ul>
				<div id="language">
				<h5><%= t ".language"%></h5>
				<li><%= link_to_unless_current "English", locale: "en"%>
					<%= link_to image_tag("/images/button_english.jpg"), locale: "en"%>
				<li><%= link_to_unless_current "FranÃ§ais", locale: "fr"%>
					<%= link_to image_tag("/images/button_france.jpg"), locale: "fr"%>
				</div>
			</ul>
        </nav>
      </header>
      <section class="round">
        <%= yield %>
      </section>
	<hr>  
</section>
    <%= render 'layouts/footer' %>
    </div>
  </body>
</html>

